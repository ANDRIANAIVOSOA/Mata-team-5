<!-- Cart -->
<%  @nb = 0 
        @somme = 0
    %>
    
<section class="cart bgwhite p-t-70 p-b-100">
	<div class="container">
		<!-- Cart item -->
		<div class="container-table-cart pos-relative">
			<div class="wrap-table-shopping-cart bgwhite">
				<table class="table-shopping-cart">
					<tr class="table-head">
						<th class="column-1"></th>
						<th class="column-2">Titre de l'image</th>
						<th class="column-3">Prix</th>
						<th class="column-4 p-l-70">Description</th>
						<th class="column-5">Action</th>
					</tr>

					
                    <% @items.each do |item|  
                        @nb +=1
                        @somme += item.price %>
					<tr class="table-row">
						<td class="column-1">
							<div style="background-image:url(<%= asset_url(item.image_url) %>); height:100px" class="cart-img-product b-rad-4 o-f-hidden block-prod-for-back">
								
							</div>
						</td>
						<td class="column-2"><%= item.title %></td>
						<td class="column-3"><%= item.price %>€</td>
						<td class="column-4"><%= item.description %></td>
						<td class="column-5">
							<div class="size10 trans-0-4 m-t-10 m-b-10">
							<span class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4"><%= link_to 'Commander', root_path, 
								method: :delete, 
								data: { confirm: 'Are you sure?' } 
							%>	
							<button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
								<i class="fa fa-trash" aria-hidden="true"></i> &nbsp;Supprimer
							</button>
							</div>
						</td>
                    </tr>
                    <% end %>
                    
				</table>
			</div>
		</div>

		<!--div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
			<div class="flex-w flex-m w-full-sm">
				
			</div>

			<div class="size10 trans-0-4 m-t-10 m-b-10">
				
				<button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
					Update Cart
				</button>
			</div>
		</div-->

		<!-- Total -->
		<%= form_tag items_path do %>
		<div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
			<h5 class="m-text20 p-b-24">
				Total du panier
			</h5>
			<!--  -->
			<div class="flex-w flex-sb-m p-t-26 p-b-30">
				<span class="m-text22 w-size19 w-full-sm">
					Total :
				</span>

				<span class="m-text21 w-size20 w-full-sm amount">
					<%= @somme %>€
                </span>
                <span class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4"><%= link_to 'Commander', delete_cart_path(current_user.id), 
                    method: :delete, 
                    data: { confirm: 'Are you sure?' } 
                %> 
        </span>
			</div>

			<div class="flex-w flex-sb-m p-t-26 p-b-30">
				<% if flash[:error].present? %>
			      <div id="error_explanation">
			        <p><%= flash[:error] %></p>
			      </div>
			    <% end %>
			</div>

			
		</div>
		<% end %>
	</div>
</section>